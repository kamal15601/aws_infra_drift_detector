# InfraSnap Configuration
# Environment variables for Flask application

# Application Settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Settings
CORS_ORIGINS=*

# Azure Configuration (for future use)
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_TENANT_ID=your-tenant-id

# Database Configuration (for future use)
# DATABASE_URL=sqlite:///infrasnap.db

# Redis Configuration (for future use)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Monitoring (for future use)
# APPLICATION_INSIGHTS_CONNECTION_STRING=your-connection-string
